task_input_store = {} 

while True:
    
    user_input = input("\nEnter 'add', 'view', 'mark', 'remove', or 'quit': ").lower()

    if user_input == "quit" or user_input == "exit":
        print("Exiting to-do list. Goodbye!")
        break  

    elif user_input == "add task":
        
        task_input = input("Enter a new task: ")
        status = input("Enter status : ").lower()
        if status not in ["completed", "incomplete", "pending", "done"]:
           print("Invalid status. Setting to 'pending'.")
           status = "pending"
           
        task_input_store[task_input] = status
        print(f"Task added: '{task_input}'")

    elif user_input == "view list":
        print("\n--- Your Tasks ---")
        if not task_input_store:
            print("Your to-do list is empty.")
        else:
            for task, status in task_input_store.items():
                print(f"- {task}: {status}")
        print("--------------------")

    elif user_input == "mark":
        task_to_mark = input("Enter the task you want to mark as completed: ")
        
        if task_to_mark in task_input_store:
            task_input_store[task_to_mark] = "completed"
            print(f"Task '{task_to_mark}' marked as completed.")
        else:
            print("Error: Task not found.")
    elif user_input == "remove":
        task_to_remove = input("Enter the task you want to remove: ")

        if task_to_remove in task_input_store:
            del task_input_store[task_to_remove]
            print(f" Task '{task_to_remove}' removed.")
        else:
            print("Error: Task not found.")

    else:
        print("Invalid input. Please try again.")
